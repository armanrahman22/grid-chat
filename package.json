{
	"name": "socket.io-react-hooks-chat",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@azure/msal-node": "^1.0.3",
		"@fluentui/react-icons-northstar": "^0.54.0",
		"@fluentui/react-northstar": "~0.54.0",
		"@fluentui/react-teams": "^3.0.0",
		"@microsoft/mgt": "^2.1.0",
		"@microsoft/mgt-element": "^2.1.0",
		"@microsoft/mgt-msal-provider": "^2.1.0",
		"@microsoft/mgt-react": "^2.1.0",
		"@microsoft/mgt-teams-provider": "^2.1.0",
		"@microsoft/microsoft-graph-client": "^2.2.1",
		"@microsoft/teams-js": "^1.9.0",
		"axios": "^0.21.1",
		"cookie-parser": "^1.4.5",
		"debug": "^4.3.1",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-promise-router": "^4.1.0",
		"express-session": "^1.17.1",
		"express-validator": "^6.10.1",
		"isomorphic-fetch": "^3.0.0",
		"jwt-decode": "^3.1.2",
		"morgan": "^1.10.0",
		"msteams-react-base-component": "^3.1.0",
		"node-fetch": "^2.6.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^5.2.0",
		"react-scripts": "^4.0.3",
		"socket.io": "^4.0.1",
		"socket.io-client": "^4.0.1"
	},
	"devDependencies": {
		"concurrently": "^6.0.2",
		"cross-env": "^7.0.3",
		"del": "^6.0.0",
		"eslint": "^7.25.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-react": "^1.1.7",
		"eslint-loader": "^4.0.2",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.23.2",
		"gulp": "^4.0.2",
		"gulp-token-replace": "^1.1.5",
		"gulp-zip": "^5.1.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"nodemon": "^2.0.7",
		"parcel-bundler": "^1.12.5",
		"prettier": "2.2.1",
		"vinyl": "^2.2.1",
		"wait-on": "^5.3.0",
		"yargs": "^16.2.0"
	},
	"scripts": {
		"build:client": "parcel build ./src/client/index.html --out-dir dist/client",
		"build:server": "parcel build ./src/server/server.js -d dist/server --public-url /dist --target=node6",
		"build": "yarn build:client && yarn build:server",
		"clean": "rimraf ./dist/*",
		"dev:server": "nodemon ./dist/server/server.js",
		"dev": "yarn clean && yarn watch & yarn waiton:serverjs && yarn dev:server",
		"lint:js": "eslint --config ./.eslintrc.json --fix --max-warnings=0 './{src,config}/**/*.{js,jsx}'",
		"lint:prettier": "prettier --write --config ./.prettierrc './{src,config}/**/*.{js,ts,tsx}'",
		"prod:server": "node ./dist/server/server.js",
		"prod": "yarn clean && yarn build && cross-env NODE_ENV=production yarn prod:server",
		"waiton:serverjs": "yarn wait-on ./dist/server/server.js",
		"watch:client": "parcel watch ./src/client/index.html --out-dir dist/client",
		"watch:server": "parcel watch ./src/server/server.js -d dist/server --public-url /dist --target=node6",
		"watch": "concurrently --kill-others \"yarn watch:client\" \"yarn watch:server\""
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,json,jsx}": [
			"yarn lint:js",
			"yarn prettier",
			"git add"
		]
	},
	"proxy": "http://localhost:3007"
}
